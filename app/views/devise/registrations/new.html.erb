<div class="row">
  <div class="col-md-5 col-md-offset-7 col-xs-8 col-xs-offset-2">
    <h1>Register</h1>
    <%= form_for resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal' do |f| %>
    <%= devise_error_messages! %>
      <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <%= f.text_field :name, placeholder: 'Name', class: 'form-control input-lg'  %>
              </div>
              <div class="col-xs-6">
                <%= f.text_field :surname, class: 'form-control input-lg', placeholder: 'Surname' %>
              </div>
            </div>
      </div>

      <div class="form-group">
        <%= f.email_field :email, class: 'form-control input-lg', placeholder: 'Email' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: :off, class: 'form-control input-lg', placeholder: 'Password' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control input-lg', placeholder: 'Confirm Password', autocomplete: :off %>
      </div>
      <%= render "devise/shared/links" %>
      <div class="form-group">
        <%= f.submit 'Register', class: 'btn btn-primary btn-block' %>
      </div>

    <% end %>
  </div>
</div>
