<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="well">
      <h3 class="centered">My Profile</h3>
        <blockquote><label>Name:    </label> <%= @user.name %></blockquote>
        <blockquote><label>Surname: </label> <%= @user.surname %></blockquote>
        <blockquote><label>Email:   </label> <%= @user.email %></blockquote>
        <blockquote><%= image_tag @user.avatar.url(:medium), class: "img-rounded" %></blockquote>
        <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-primary' %>
      <hr />
      <h4><%= @user.name %>`s Posts</h4>
      <% @user.posts.each do |post| %>
        <div class="panel panel-default">
          <div class="panel-body">
            <%= post.content %>
          </div>
        </div>
      <% end %>
      <hr />
      <h4>Friends:</h4>
      <ul class="list-group">
        <% @friends.each do |f|  %>
          <%= link_to user_path(f.id) do %>
            <li class="list-group-item">
              <%= f.name %> <%= f.surname %>
            </li>
          <% end %>
        <% end %>
      </ul>
      <% if current_user?(@user) %>
        <%= render 'friend_requests' %>
      <% end %>

    </div>
  </div>
</div>
