<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="well">
      <h3 class="centered"><%= @user.name %> <%= @user.surname %></h3>
      <% if current_user?(@user) %>
        <%= render 'friend_requests' %>
      <% end %>
      <h4>Friends:</h4>
      <ul class="list-group">
        <% @user.friends.each do |f|  %>
          <%= link_to user_path(f.id) do %>
            <li class="list-group-item">
              <%= f.name %> <%= f.surname %>
            </li>
          <% end %>
        <% end %>
      </ul>

    </div>
  </div>
</div>
