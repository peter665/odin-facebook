<div class="row">
  <div class="col-md-5 col-md-offset-7">
    <%= form_tag new_user_registration_path, class: 'form-horizontal' do %>
      <div class="form-group">
            <div class="row">
              <div class="col-md-6">
                <%= text_field_tag :name, nil, placeholder: 'Name', class: 'form-control input-lg'  %>
              </div>
              <div class="col-md-6">
                <%= text_field_tag :surname, nil, class: 'form-control input-lg', placeholder: 'Surname' %>
              </div>
            </div>
      </div>

      <div class="form-group">
        <%= email_field_tag :email, nil, class: 'form-control input-lg', placeholder: 'Email' %>
      </div>

    <% end %>
  </div>
</div>
