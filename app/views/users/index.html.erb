<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% @users.each do |user| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= user.name %> <%= user.surname %>
          <%= form_tag friend_requests_path do %>
            <%= hidden_field_tag :id_receiving, user.id %>
            <%= submit_tag 'Send friend request', class: 'btn btn-primary btn-sm' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
