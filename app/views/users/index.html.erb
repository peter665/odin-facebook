<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">All Users</h1>
    <%= will_paginate %>
    <% @users.each do |user| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= user.name %> <%= user.surname %>
            <%= form_tag friend_requests_path, class: 'pull-right' do %>
              <%= hidden_field_tag :id_receiving, user.id %>
              <% unless current_user.friends.include?(user) %>
                <%= submit_tag 'Send friend request', class: 'btn btn-primary btn-sm' %>
              <% else %>
                <%= submit_tag 'Send friend request', class: 'btn btn-primary btn-sm', disabled: 'disabled' %>
              <% end %>
            <% end %>
        </div>
      </div>
    <% end %>
    <%= will_paginate %>
  </div>
</div>
